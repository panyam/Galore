{
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",  
    "lib": ["es2015", "dom", "dom.Iterable"],
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "plugins": [ { "name": "typescript-tslint-plugin" } ],
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "target": "es5",
    "removeComments": true
  },
  "include": [
    "./src/lib/**/*.ts",
    "./src/clients/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "public",
      ".cache"
  ]
}
