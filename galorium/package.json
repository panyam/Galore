    "http-errors": "~1.8.1",
    "js-yaml": "^4.1.0",
    "uuid": "^8.3.2",
    "uuid-v4-validator": "^2.0.0",
    "uuidv4": "^6.2.12"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-flow": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.3",
    "@types/js-yaml": "^4.0.5",
    "@types/jsdom": "^16.2.13",
    "@types/shelljs": "^0.8.9",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "autoprefixer": "^10.4.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.4.5",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.8.2",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.0",
    "handlebars": "^4.7.7",
    "highlight.js": "11.3.1",
    "jest": "^27.4.5",
    "jest-each": "^27.4.2",
    "jest-mock": "^27.4.2",
    "jsdom": "^19.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4",
    "typescript-tslint-plugin": "^1.0.1"
  },
  "scripts": {
    "clean": "rm -Rf dist && jest --clearCache && rm -rf static/dist",
    "buildhp": "cd homepage ; hugo -D",
    "buildbe": "tsc -p tsconfig.server.json &&  cp *.yaml ./dist/ && cp -r bin ./dist/ && cp package.json ./dist/",
    "builddemosprod": "cd demos ; npm run buildprod",
    "builddemos": "cd demos ; npm run build",
    "buildall": "npm run builddemos && npm run buildhp && npm run buildbe",
    "buildallprod": "npm run buildsites && npm run buildbe && npm run builddemosprod",
    "test": "jest --coverage --runInBand",
    "start": "node ./bin/www",
    "startlocal": "cd dist && npm run start",
    "deploy": "npm run buildall && ( cd dist ; gcloud app deploy --verbosity=info --project galorium )",
    "lint": "eslint './src' --quiet --ext .ts --resolve-plugins-relative-to .",
    "lintfix": "eslint 'src/**/*.ts' --quiet --fix --resolve-plugins-relative-to .",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "copy-config": "cp src/config/config.yml dist/src/config",
    "copy-static": "cp -r backend/static dist/backend",
    "tsc": "./node_modules/typescript/bin/tsc; npm run copy-config && npm run copy-static"
  }
}
