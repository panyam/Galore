    "buildbe",
    "lintfix",
    "test"
  ],
  "dependencies": {
    "@handlebars/allow-prototype-access": "^1.0.5",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.12",
    "@typescript-eslint/parser": "^5.7.0",
    "express": "^4.17.1",
    "express-handlebars": "^6.0.2",
    "express-session": "^1.17.2",
