{
  "exclude": [
    "node_modules",
    "src/sites",
    "src/admin",
    "src/server",
    "dist"
  ],
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2019", "es2015", "dom", "dom.Iterable"],
    "module": "ES2020",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "./dist/static/dist/",
    "plugins": [ { "name": "typescript-tslint-plugin" } ],
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "es5"
  },
  "include": [
    "./src/lib/**/*.ts",
    "./src/pages/**/*.ts",
    "./src/entities/**/*.ts"
  ]
}
