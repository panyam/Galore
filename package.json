{
  "name": "galore",
  "version": "1.0.3",
  "author": "Sriram Panyam",
  "description": "A toolbox for languages analyzers and parser generators.",
  "homepage": "https://github.com/panyam/Galore#readme",
  "license": "ISC",
  "types": "lib/cjs/index.d.ts",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panyam/Galore.git"
  },
  "keywords": [
    "languages",
    "parsing"
  ],
  "bugs": {
    "url": "https://github.com/panyam/Galore/issues"
  },
  "dependencies": {
    "@panyam/tsutils": "*",
    "tlex": "*"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsdom": "^21.1.7",
    "axios": "^1.13.0",
    "codecov": "^3.8.3",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "pre-commit": "^1.2.2",
    "prettier": "^3.7.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.32.0"
  },
  "pre-commit": [
    "precommit-msg",
    "clean",
    "build",
    "lintfix",
    "test"
  ],
  "scripts": {
    "clean": "rm -Rf lib && jest --clearCache && rm -rf static/lib",
    "build": "npm run  clean && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "test": "jest --coverage --runInBand",
    "lint": "eslint src --quiet",
    "lintfix": "eslint src --quiet --fix",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "prepare": "npm run build",
    "prepublishOnly": "echo prepublishOnly...",
    "preversion": "npm run build && npm run lintfix",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  }
}
