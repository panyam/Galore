{
  "name": "ltb",
  "version": "0.0.14",
  "author": "Sriram Panyam",
  "description": "A toolbox for languages analyzers and parser generators.",
  "homepage": "https://github.com/panyam/ltb#readme",
  "license": "ISC",
  "types": "lib/cjs/index.d.ts",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panyam/ltb.git"
  },
  "keywords": [
    "languages",
    "parsing"
  ],
  "bugs": {
    "url": "https://github.com/panyam/ltb/issues"
  },
  "pre-commit": [
    "precommit-msg",
    "clean",
    "lintfix",
    "test"
  ],
  "scripts": {
    "clean": "rm -Rf lib && jest --clearCache && rm -rf static/lib",
    "build": "npm run  clean && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "test": "jest --coverage --runInBand",
    "start": "webpack-dev-server --mode=development",
    "lint": "eslint './src' --quiet --ext .ts --resolve-plugins-relative-to .",
    "lintfix": "eslint 'src/**/*.ts' --quiet --fix --resolve-plugins-relative-to .",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "prepare": "npm run build",
    "prepublishOnly": "echo prepublishOnly...",
    "preversion": "npm run build && npm run lintfix",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@panyam/tsutils": "file:../tsutils",
    "tlex": "file:../tlex"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/js-yaml": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "babel-jest": "^26.6.3",
    "codecov": "^3.8.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-each": "^26.6.2",
    "jest-mock": "^26.6.2",
    "js-yaml": "^4.0.0",
    "json5": "^2.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "typescript": "^4.2.3",
    "typescript-tslint-plugin": "^1.0.1",
    "webpack": "^5.22.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  }
}
